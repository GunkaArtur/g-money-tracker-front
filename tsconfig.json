{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "downlevelIteration": true,
    "allowJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
